{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "target": "ES2020", // Target modern JavaScript
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "backend/prisma/seed.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}